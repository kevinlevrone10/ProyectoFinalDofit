@model ProyectoFinalDofit.Models.Trabajadores

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Content/uza/customStyles")

<style>
    .center-button {
        text-align: center;
    }

</style>

<section class="newproduct section">
    <div class="container">

        <h2>Agregar Nuevo Trabajador</h2>

        @using (Html.BeginForm("Create", "Trabajadores", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form__group">
                <label class="form__label" for="Codigo">Código</label>
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form__input" } })
                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
            </div>

            <div class="form__group">
                <label class="form__label" for="Nombre">Nombre</label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form__input" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>

            <div class="form__group">
                <label class="form__label" for="Apellido">Apellido</label>
                @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form__input" } })
                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
            </div>

            <div class="form__group">
                <label class="form__label" for="Telefono">Teléfono</label>
                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form__input" } })
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
            </div>

            <div class="form__group">
                <label class="form__label" for="Activo">Estado</label>
                @Html.EditorFor(model => model.Activo, new { htmlAttributes = new { @class = "form__input form--check" } })
                @Html.ValidationMessageFor(model => model.Activo, "", new { @class = "text-danger" })
            </div>

            <div class="form__group">
                <label class="form__label" for="Turno_Id">Turno</label>
                @Html.DropDownList("Turno_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Turno_Id, "", new { @class = "text-danger" })
            </div>

            <div class="form__group center-button">
                <input type="submit" value="Create" class="btn" />
            </div>

        }

        <div>
            <a href="@Url.Action("Index")" class="btn btn--details">Regresar</a>
        </div>
    </div>
</section>
