@model IEnumerable<ProyectoFinalDofit.Models.Articulos>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="~/Content/uza/asset/estilos/estilos.css">

<style>

    :root {
        --color-fondo: #EBF1F4;
        --color-primario: #069cd2;
        --color-blanco: #ffffff;
        --color-negro: #2A3133;
        --color-rojo: #e00202d2;
        --color-verde: #16aa39;
        --color-amarillo: #f0b607;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        font-size: 62.5%;
        font-family: 'Poppins', sans-serif;
    }

    body {
        font-size: 1.6rem;
        background-color: var(--color-fondo);
    }

    h1, h2, h3 {
        margin: 0;
    }

    ul {
        list-style: none;
    }

    a {
        text-decoration: none;
    }
    /****** globales  ****/
    .container {
        width: 95%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .section {
        padding: 3.5rem 0;
    }

    .btn {
        display: inline-block;
        padding: 1rem;
        border-radius: 5px;
        background-color: var(--color-verde);
        color: var(--color-blanco);
        font-size: 1.4rem;
        border: none;
        cursor: pointer;
    }

    .btn--details {
        background-color: var(--color-amarillo);
    }

    .btn--delete {
        background-color: var(--color-rojo);
    }

    .btn--top {
        margin-top: 2rem;
    }
    /*     tablas   */
    .table {
        width: 100%;
        margin-top: 10px;
        font-size: 15px;
        text-align: left;
    }

        .table thead {
            background-color: #069cd2;
        }

        .table th {
            padding: 18px 5px;
            font-weight: 500;
            color: #fff;
        }

        .table td {
            padding: 3px 5px;
        }

    .product__h2 {
        font-size: 35px;
        margin-bottom: 10px;
    }
</style>

<section class="product section">
    <div class="container">
        <h2 class="product__h2">Productos</h2>

        @Html.ActionLink("Agregar Producto", "Create", null, new { @class = "btn" })

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Código
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Costo unitario
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Precio venta
                    </th>
                    <th>
                        Total Costo
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Linea
                    </th>
                    <th>
                        Activo
                    </th>
                    <th>
                        Acciones a Realizar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Costo_Unitario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio_Venta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total_Costo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Linea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activo)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Articulo_Id }, new { @class = "btn" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.Articulo_Id }, new { @class = "btn btn--details" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Articulo_Id }, new { @class = "btn btn--delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
